---
import "../styles/index.css";

import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import DatePicker from '../components/DatePicker.astro';
import Revealable from '../components/Revealable.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Hours + Location | Playground Asian Food Hall  | Asian fusion food hall in Denver, CO">
  <Header/>

  <Revealable>
    <div class="py-20 lg:py-16 px-4 mx-auto max-w-xl">
      <h2 class="mb-4 text-4xl tracking-tight font-syncopate font-black text-center md:text-5xl">Inquire Now!</h2>
      <p class="mb-2 font-thin text-center text-sm md:text-base">Contact Us About Your Catering Needs!</p>
      <p class="mb-4 font-thin text-center text-sm md:text-base">Looking forward to hearing from you!</p>

      <form name="catering" method="POST" class="space-y-4" data-netlify="true">
        <div>
          <label for="email" class="block mb-2 text-sm font-black">Email</label>
          <input type="email" name="email" id="email" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="email" required>
        </div>

        <div>
          <label for="first-name" class="block mb-2 text-sm font-black">First Name</label>
          <input type="text" name="first name" id="first-name" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="first name" required>
        </div>

        <div>
          <label for="last-name" class="block mb-2 text-sm font-black">Last Name</label>
          <input type="text" name="last name" id="last-name" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="last name" required>
        </div>

        <div>
          <label for="phone-number" class="block mb-2 text-sm font-black">Phone Number</label>
          <input type="tel" name="phone number" id="phone-number" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="555 555 5555" required>
        </div>

        <div>
          <label for="company" class="block mb-2 text-sm font-black">Company</label>
          <input type="text" name="company" id="company" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="company" required>
        </div>

        <div>
          <label for="address-1" class="block mb-2 text-sm font-black">Address 1</label>
          <input type="text" name="address 1" id="address-1" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="address 1" required>
        </div>

        <div>
          <label for="address-2" class="block mb-2 text-sm font-black">Address 2</label>
          <input type="text" name="address 2" id="address-2" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="address 2">
        </div>

        <div>
          <label for="city" class="block mb-2 text-sm font-black">City</label>
          <input type="text" name="city" id="city" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="city" required>
        </div>

        <div>
          <label for="state" class="block mb-2 text-sm font-black">State</label>
          <select name="state" id="state" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" required>
            <option value="AL">AL</option>
            <option value="AR">AR</option>
            <option value="AZ">AZ</option>
            <option value="CA">CA</option>
            <option value="CO">CO</option>
            <option value="CT">CT</option>
            <option value="DC">DC</option>
            <option value="DE">DE</option>
            <option value="FL">FL</option>
            <option value="GA">GA</option>
            <option value="HI">HI</option>
            <option value="IA">IA</option>
            <option value="ID">ID</option>
            <option value="IL">IL</option>
            <option value="IN">IN</option>
            <option value="KS">KS</option>
            <option value="KY">KY</option>
            <option value="LA">LA</option>
            <option value="MA">MA</option>
            <option value="MD">MD</option>
            <option value="ME">ME</option>
            <option value="MI">MI</option>
            <option value="MN">MN</option>
            <option value="MO">MO</option>
            <option value="MS">MS</option>
            <option value="MT">MT</option>
            <option value="NC">NC</option>
            <option value="ND">ND</option>
            <option value="NE">NE</option>
            <option value="NH">NH</option>
            <option value="NJ">NJ</option>
            <option value="NM">NM</option>
            <option value="NV">NV</option>
            <option value="NY">NY</option>
            <option value="OH">OH</option>
            <option value="OK">OK</option>
            <option value="OR">OR</option>
            <option value="PA">PA</option>
            <option value="RI">RI</option>
            <option value="SC">SC</option>
            <option value="SD">SD</option>
            <option value="TN">TN</option>
            <option value="TX">TX</option>
            <option value="UT">UT</option>
            <option value="VA">VA</option>
            <option value="VT">VT</option>
            <option value="WA">WA</option>
            <option value="WI">WI</option>
            <option value="WV">WV</option>
            <option value="WY">WY</option>
          </select>
        </div>

        <div>
          <label for="zip-code" class="block mb-2 text-sm font-black">Zip Code</label>
          <input type="text" name="zip code" id="zip-code" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="zip code" required>
        </div>

        <div>
          <DatePicker id="event-date" name="event date"/>
        </div>

        <div>
          <label for="start-time" class="block mb-2 text-sm font-black">Start Time</label>
          <input type="time" id="start-time" name="start time" min="00:00" max="24:00"
            class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" required>
        </div>

        <div>
          <label for="end-time" class="block mb-2 text-sm font-black">End Time</label>
          <input type="time" id="end-time" name="end time" min="00:00" max="24:00"
            class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" required>
        </div>

        <div>
          <label for="event-type" class="block mb-2 text-sm font-black">Type of Event</label>
          <select name="event type" id="event-type" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" required>
            <option value="Alumni">Alumni</option>
            <option value="Bachelor / Bachelorette">Bachelor / Bachelorette</option>
            <option value="Birthday">Birthday</option>
            <option value="Cocktail Reception">Cocktail Reception</option>
            <option value="Corporate Lunch">Corporate Lunch</option>
            <option value="Engagement">Engagement</option>
            <option value="Fundraiser">Fundraiser</option>
            <option value="Graduation">Graduation</option>
            <option value="Holiday">Holiday</option>
            <option value="Meeting / Presentation">Meeting / Presentation</option>
            <option value="Photo / Film Shoot">Photo / Film Shoot</option>
            <option value="Private Dinner">Private Dinner</option>
            <option value="Rehearsal Dinner">Rehearsal Dinner</option>
            <option value="Shower">Shower</option>
            <option value="Sporting Event">Sporting Event</option>
            <option value="Wedding">Wedding</option>
            <option value="Other">Other</option>
          </select>
        </div>

        <div>
          <label for="number-of-people" class="block mb-2 text-sm font-black">Number of People</label>
          <input type="number" name="number of people" id="number-of-people" class="shadow-sm border-2 border-black text-sm focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="number of people" required>
        </div>

        <div class="sm:col-span-2">
          <label for="additional-information" class="block mb-2 text-sm font-black">Additional Information</label>
          <textarea id="additional-information" name="additional information" rows="6" class="block text-black p-2.5 w-full text-sm shadow-sm border-2 border-black focus:ring-primary-500 focus:border-primary-500 dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="additional information"></textarea>
        </div>

        <button type="submit" class="py-3 px-5 text-sm font-black font-syncopate text-center border-4 border-black w-full md:w-fit hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300">SEND</button>
      </form>
    </div>
  </Revealable>

  <Footer/>
</Layout>
