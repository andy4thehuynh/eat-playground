---
import "../../styles/index.css";

import Layout from '../../components/Layout.astro';
import Header from '../../components/Header.astro';
import Revealable from '../../components/Revealable.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Hours + Location | Playground Asian Food Hall  | Asian fusion food hall in Denver, CO">
  <Header/>

  <Revealable>
      <img
        src="../../images/kimbap.avif"
        class="block object-cover bg-cover h-[70vh] w-full"
        alt="baked chicken wings on a sheet pan"
      />
  </Revealable>


  <Revealable>
    <main>
      <section class="text-center max-w-2xl px-4 mx-auto pt-20 pb-20">
        <h1 class="font-syncopate text-3xl font-black bg-red-600 mt-[-35%] py-6 mb-11 md:mt-[-20%]">Hello! Kimbap</h1>
        <img
          src="../../images/kimbap-logo.avif"
          class="block w-48 mx-auto md:w-56"
          alt="bok bok logo"/>
      </section>
    </main>
  </Revealable>

  <Revealable>
    <div class="container mx-auto flex flex-row flex-wrap md:flex-nowrap w-full">
      <div class="flex flex-col basis-full flex-1 mb-5 md:border-r-4 md:border-black">
        <h2 class="text-2xl font-syncopate font-black text-center mb-4 md:text-3xl">Korean-Style Rolls</h2>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Tuna Mix Kimbap</h4>
          <p class="text-center"><strong>9</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Bulgogi Beef Kimbap</h4>
          <p class="text-center"><strong>10</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Spicy Tuna Kimbap</h4>
          <p class="text-center"><strong>9</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Veggie Kimbap</h4>
          <p class="text-center"><strong>8</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Kimchi Kimbap</h4>
          <p class="text-center"><strong>8</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Tamari-Soy Tofu Kimbap</h4>
          <p class="text-center"><strong>9</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Shrimp Tempura Kimbap</h4>
          <p class="text-center"><strong>10</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Sweet Chili Salmon Kimbap</h4>
          <p class="text-center"><strong>11</strong></p>
        </div>
      </div>

      <div class="flex flex-col basis-full flex-1 mb-5">
        <h2 class="text-2xl font-syncopate font-black text-center mb-4 md:text-3xl">Sides</h2>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">JAPCHAE</h4>
          <p class="text-center">Korean sesame noodles with veggies</p>
          <p class="text-center"><strong>7</strong></p>
        </div>
      </div>
    </div>
  </Revealable>


  <Footer/>
</Layout>
