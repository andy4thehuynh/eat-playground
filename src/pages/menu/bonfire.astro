---
import "../../styles/index.css";

import Layout from '../../components/Layout.astro';
import Header from '../../components/Header.astro';
import Revealable from '../../components/Revealable.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Hours + Location | Playground Asian Food Hall  | Asian fusion food hall in Denver, CO">
  <Header/>

  <Revealable>
    <img
      src="../../images/banh-mi.jpg"
      class="block object-cover bg-cover h-[70vh] w-full"
      alt="banh mi"
    />
  </Revealable>

  <Revealable>
    <main>
      <section class="text-center max-w-2xl px-4 mx-auto pt-20 pb-20">
        <h1 class="font-syncopate text-3xl font-black bg-red-600 mt-[-35%] py-6 mb-11 md:mt-[-20%]">BONFIRE</h1>
        <img
          src="../../images/bonfire-logo.png"
          class="block w-48 mx-auto md:w-56"
          alt="bok bok logo"/>
      </section>
    </main>
  </Revealable>

  <Revealable>
    <div class="container mx-auto flex flex-row flex-wrap md:flex-nowrap w-full">
      <div class="flex flex-col basis-full flex-1 mb-5">
        <h2 class="text-2xl font-syncopate font-black text-center mb-4 md:text-3xl">MAINS</h2>
        <div class="food-menu-item mb-4">
          <p class="text-center mb-2 text-sm">Vietnamese sandwiches with fillings, toasted</p>
          <p class="text-center mb-6 text-sm">Served with jalapeno, pickled carrots, cucumbers, cilantro, soy sauce, and garlic aioli </p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">GRILLED CHICKEN</h4>
          <p class="text-center"><strong>10</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">GRILLED BEEF</h4>
          <p class="text-center"><strong>11</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Poâ€™ Shrimp</h4>
          <p class="text-center"><strong>12</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Crispy Tofu</h4>
          <p class="text-center"><strong>10</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Chunky Avocado</h4>
          <p class="text-center"><strong>11</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <h4 class="font-syncopate font-black text-lg text-center">Fried Eggs + Chinese Sausage</h4>
          <p class="text-center"><strong>9</strong></p>
        </div>
        <div class="food-menu-item mb-4">
          <p class="text-center text-sm">Add Egg | Avocado + <strong>$1</strong></p>
          <p class="text-center text-sm">Double Meat + <strong>$4</strong></p>
          <p class="text-center text-sm">Extra Sriracha Aioli <strong>$0.25</strong></p>
        </div>
      </div>
    </div>
  </Revealable>

  <Footer/>
</Layout>
